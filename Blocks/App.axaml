<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Blocks.App"
             xmlns:local="using:Blocks"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Resources/Resources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Controls/AnimatedMenuIcon.axaml" />
        <StyleInclude Source="Controls/AnimatedDot.axaml" />
        <StyleInclude Source="Controls/BlockButton.axaml" />
        <StyleInclude Source="Controls/BlockView.axaml" />
    </Application.Styles>
</Application>