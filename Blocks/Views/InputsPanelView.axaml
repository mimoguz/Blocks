<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Blocks.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="450"
             x:Class="Blocks.Views.InputsPanelView"
             x:DataType="vm:InputsPanelViewModel">
    <Design.DataContext>
        <vm:InputsPanelViewModel />
    </Design.DataContext>

    <Border Background="{DynamicResource BlockWindowBackgroundBrush}">
        <StackPanel Margin="8">
            <StackPanel.Styles>
                <Style Selector="WrapPanel.demo">
                    <Setter Property="ItemSpacing" Value="10" />
                    <Setter Property="LineSpacing" Value="20" />
                </Style>
                <Style Selector="Separator.demo">
                    <Setter Property="Margin" Value="0,8" />
                </Style>
                <Style Selector="CheckBox.demo">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="IsEnabled" Value="{Binding AllEnabled}" />
                    <Setter Property="IsChecked" Value="{Binding AllChecked}" />
                    <Setter Property="IsThreeState" Value="True" />
                </Style>
                <Style Selector="RadioButton.demo">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="IsEnabled" Value="{Binding AllEnabled}" />
                </Style>
                <Style Selector="TextBox.demo">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="IsEnabled" Value="{Binding AllEnabled}" />
                    <Setter Property="Text" Value="{Binding Text, Mode=TwoWay}" />
                </Style>
                <Style Selector="NumericUpDown.demo">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="IsEnabled" Value="{Binding AllEnabled}" />
                    <Setter Property="Value" Value="{Binding CurrentDoubleValue, Mode=TwoWay}" />
                    <Setter Property="Minimum" Value="{Binding MinDoubleValue, Mode=OneTime}" />
                    <Setter Property="Maximum" Value="{Binding MaxDoubleValue, Mode=OneTime}" />
                    <Setter Property="Increment" Value="0.5" />
                </Style>
                <Style Selector="ComboBox.demo">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="IsEnabled" Value="{Binding AllEnabled}" />
                    <Setter Property="ItemsSource" Value="{Binding StringValues}" />
                </Style>
                <Style Selector="ButtonSpinner.demo">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="IsEnabled" Value="{Binding AllEnabled}" />
                </Style>
                <Style Selector="Slider.demo">
                    <Setter Property="HorizontalAlignment" Value="Left" />
                    <Setter Property="VerticalAlignment" Value="Top" />
                    <Setter Property="IsEnabled" Value="{Binding AllEnabled}" />
                    <Setter Property="Value" Value="{Binding CurrentDoubleValue, Mode=TwoWay}" />
                    <Setter Property="Minimum" Value="{Binding MinDoubleValue, Mode=OneTime}" />
                    <Setter Property="Maximum" Value="{Binding MaxDoubleValue, Mode=OneTime}" />
                    <Setter Property="TickFrequency" Value="0.5" />
                    <Setter Property="IsSnapToTickEnabled" Value="True"></Setter>
                </Style>
            </StackPanel.Styles>

            <Grid ColumnDefinitions="Auto, 48, Auto, 8, Auto, 48, Auto, 8, *"
                  RowDefinitions="Auto, 20, Auto">

                <CheckBox IsChecked="{Binding AllEnabled, Mode=TwoWay}" Grid.Row="0" Grid.Column="0">
                    Enable All
                </CheckBox>

                <CheckBox IsChecked="{Binding AllChecked, Mode=TwoWay}" Grid.Row="2" Grid.Column="0">
                    Check All
                </CheckBox>

                <TextBlock Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left">
                    Text Content
                </TextBlock>
                <TextBox Grid.Row="0" Grid.Column="4"
                         Width="200"
                         Classes="clearButton"
                         HorizontalAlignment="Left" VerticalAlignment="Center"
                         Text="{Binding Text}" />

                <TextBlock Grid.Row="2" Grid.Column="2"
                           VerticalAlignment="Center" HorizontalAlignment="Left">
                    Numeric Content
                </TextBlock>
                <NumericUpDown Grid.Row="2" Grid.Column="4"
                               Classes="demo"
                               Width="140"
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               HorizontalContentAlignment="Center" />

                <TextBlock Grid.Row="0" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Left">
                    Selected Item
                </TextBlock>
                <ComboBox Grid.Row="0" Grid.Column="8"
                          Width="200"
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          SelectedItem="{Binding CurrentStringValue }"
                          ItemsSource="{Binding StringValues}" />
            </Grid>

            <Separator Classes="demo" />

            <WrapPanel Classes="demo">
                <ButtonSpinner Classes="demo" Width="200"
                               Spin="Spinner_OnSpin"
                               ValidSpinDirection="{Binding Spin}">
                    <Panel>
                        <TextBlock Text="Button Spinner"
                                   IsVisible="{Binding CurrentStringValue, Converter={x:Static ObjectConverters.IsNull}}"
                                   Opacity="{DynamicResource BlockPlaceholderOpacity}" />
                        <TextBlock Text="{Binding CurrentStringValue}" />
                    </Panel>
                </ButtonSpinner>

                <ComboBox Classes="demo"
                          SelectedItem="{Binding CurrentStringValue}"
                          Width="200" PlaceholderText="Combo Box" />
                <ComboBox Classes="demo flat"
                          SelectedItem="{Binding CurrentStringValue}"
                          Width="200" PlaceholderText="Flat Combo Box" />
            </WrapPanel>

            <Separator Classes="demo" />

            <WrapPanel Classes="demo">
                <NumericUpDown Classes="demo" Width="140" />
                <NumericUpDown Classes="vertical demo" Height="140" Width="48" CornerRadius="999" />

                <StackPanel Spacing="10" VerticalAlignment="Center">
                    <Slider Classes="demo" Width="300" />
                    <Slider Classes="demo" Width="300" TickPlacement="TopLeft" />
                </StackPanel>
                <StackPanel Spacing="10" VerticalAlignment="Center">
                    <Slider Classes="demo" Width="300" TickPlacement="TopLeft" />
                    <Slider Classes="demo" Width="300" TickPlacement="Outside" />
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Border>
</UserControl>