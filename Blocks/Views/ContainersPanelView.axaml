                               UseLightDismissOverlayMode="False">
                        <SplitView.Styles>
                            <Style Selector="SplitView[DisplayMode=Overlay], SplitView[DisplayMode=Inline]">
                                <Setter Property="IsPaneOpen" Value="True" />
                            </Style>
                        </SplitView.Styles>
                        <SplitView.Pane>
                            <blk:PlaceHoleder Margin="12" />
                        </SplitView.Pane>

                        <SplitView.Content>
