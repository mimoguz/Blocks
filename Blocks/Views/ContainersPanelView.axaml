                                <TreeViewItem Header="Tree View Item" />
                            </TreeViewItem>
                            <TreeViewItem Header="Tree View Item">
                                <TreeViewItem Header="Tree View Item" />
                                <TreeViewItem Header="Tree View Item" />
                                <TreeViewItem Header="Tree View Item" />
                            </TreeViewItem>
                        </TreeViewItem>
                    </TreeView>

                    <GridSplitter Grid.Row="1" ResizeDirection="Rows" Padding="0,8" />

                    <!-- Bottom-left -->
                    <Expander Classes="demo" Header="Expander"
                              Grid.Row="2"
                              ExpandDirection="Down"
                              HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <Expander.Content>
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          VerticalAlignment="Stretch">
                                <StackPanel Spacing="16" Margin="8">
                                    <TextBlock TextWrapping="Wrap"
