            <Separator DockPanel.Dock="Top" />

            <Grid ColumnDefinitions="*, Auto, *" Margin="8">

                <Grid.Styles>
                    <Style Selector=":is(Control).demo">
                        <Setter Property="IsEnabled" Value="{Binding AllEnabled}" />
                    </Style>
                </Grid.Styles>

