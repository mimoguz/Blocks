                            </ScrollViewer>
                        </Expander.Content>
                    </Expander>
                </Grid>

                <GridSplitter Grid.Column="1" Padding="8,0" ResizeDirection="Columns" />

                <!-- Right -->
                <Grid Grid.Column="2" RowDefinitions="*, Auto, *">

                    <!-- Top-left -->
                    <TabControl Classes="demo" Grid.Row="0"
                                TabStripPlacement="{Binding Dock}"
                                blk:Block.ScrollBarVisibility="Auto">
                        <TabControl.Styles>
                            <Style Selector="TabItem.hide-decoration">
                                <Setter Property="Padding" Value="20,8" />
                            </Style>
                            <Style
                                Selector="TabControl[TabStripPlacement=Left] TabItem, TabControl[TabStripPlacement=Right] TabItem">
                                <Setter Property="MinWidth" Value="140" />
                            </Style>
                            <Style
                                Selector="TabControl[TabStripPlacement=Left] TabItem.hide-decoration, TabControl[TabStripPlacement=Right] TabItem.hide-decoration">
                                <Setter Property="Padding" Value="19,8,20,8" />
                            </Style>
                        </TabControl.Styles>
                        <TabItem Header="Tab Item 1">
                            <blk:PlaceHolder Margin="8" StrokeBrush="#FA0050" />
                        </TabItem>
                        <TabItem Header="Tab Item 2 - Decorless" Classes="hide-decoration">
                            <blk:PlaceHolder Margin="8" StrokeBrush="DarkOrange" />
                        </TabItem>
                        <TabItem Header="Tab Item 3">
                            <blk:PlaceHolder Margin="8" StrokeBrush="Gold" />
                        </TabItem>
                        <TabItem Header="Tab Item 4">
                            <blk:PlaceHolder Margin="8" StrokeBrush="LimeGreen" />
                        </TabItem>
                        <TabItem Header="Tab Item 5">
                            <blk:PlaceHolder Margin="8" StrokeBrush="Turquoise" />
                        </TabItem>
                        <TabItem Header="Tab Item 6">
                            <blk:PlaceHolder Margin="8" StrokeBrush="DeepSkyBlue" />
                        </TabItem>
                    </TabControl>

                    <GridSplitter Grid.Row="1" Padding="0,8" ResizeDirection="Rows" />

                    <!-- Bottom-left -->
                    
                    <blk:PlaceHolder Grid.Row="2" />
                    
