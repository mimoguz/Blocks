<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Blocks.Controls"
        xmlns:conv="clr-namespace:Blocks.Converters"
        xmlns:sys="using:System">
    <Design.PreviewWith>
        <controls:CalendarIcon />
    </Design.PreviewWith>

    <Style Selector="controls|CalendarIcon">
        <Setter Property="Foreground" Value="{DynamicResource BlockButtonForegroundBrush}" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <Ellipse Width="4" Height="4"
                             Fill="{TemplateBinding Foreground}" 
                             Margin="{TemplateBinding Padding, Converter={x:Static conv:BlockConverters.SelectBottomThickness}}"/>
                    <TextBlock Text="{Binding Source={x:Static sys:DateTime.Today}, Path=Day}" 
                               FontSize="{TemplateBinding FontSize}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>