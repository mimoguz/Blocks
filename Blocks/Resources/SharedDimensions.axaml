<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <FontWeight x:Key="BlockButtonFontWeight">Bold</FontWeight>
    
    <x:Double x:Key="BlockFontSizeLarge">15</x:Double>
    <x:Double x:Key="BlockFontSizeNormal">13</x:Double>
    <x:Double x:Key="BlockFontSizeSmall">11</x:Double>
    
    <Thickness x:Key="BlockControlBorderThickness">1</Thickness>
    <Thickness x:Key="BlockFlyoutBorderThickness">1</Thickness>
    
    <CornerRadius x:Key="BlockButtonCornerRadius">9</CornerRadius>
    <CornerRadius x:Key="BlockFlyoutCornerRadius">14</CornerRadius>
    <CornerRadius x:Key="BlockInputCornerRadius">9</CornerRadius>
