    <CornerRadius x:Key="BlockMenuItemCornerRadius">9</CornerRadius>
    <CornerRadius x:Key="BlockViewCornerRadius">9</CornerRadius>
    
    <x:Double x:Key="BlockMaxDropDownHeight">490</x:Double>
    <x:Double x:Key="BlockMaxFlyoutWidth">400</x:Double>
    
    <Thickness x:Key="BlockButtonPadding">16,8</Thickness>
    <Thickness x:Key="BlockImageButtonPadding">8</Thickness>
    <Thickness x:Key="BlockInputPadding">8,6</Thickness>
    <Thickness x:Key="BlockListItemPadding">12,6</Thickness>
    <Thickness x:Key="BlockMenuItemPadding">12,6</Thickness>
    
    <x:Double x:Key="BlockMinButtonSize">36</x:Double>
    <x:Double x:Key="BlockMinInputSize">36</x:Double>
    <x:Double x:Key="BlockMinListItemHeight">32</x:Double>
    <x:Double x:Key="BlockMinMenuItemHeight">32</x:Double>
    
    <x:Double x:Key="BlockListItemSpacing">2</x:Double>
    <x:Double x:Key="BlockMenuItemSpacing">2</x:Double>
    
</ResourceDictionary>
