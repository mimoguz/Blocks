<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:blk="clr-namespace:Blocks.Controls">
    <Design.PreviewWith>
        <StackPanel Background="White" Spacing="16">
            <NotificationCard Content="Testing" />
            <NotificationCard Content="Testing" Classes="hide-icon" />
            <NotificationCard Content="Testing" NotificationType="Success" />
            <NotificationCard Content="Testing" NotificationType="Warning" />
            <NotificationCard Content="Testing" NotificationType="Error" />
        </StackPanel>
    </Design.PreviewWith>

    <!-- ****************************************************** -->
    <!-- ********************* Resources ********************** -->
    <!-- ****************************************************** -->

    <SolidColorBrush x:Key="BlockNotificationCardBackgroundBrush"
                     Color="{DynamicResource BlockRaisedBackgroundColor}" />

    <SolidColorBrush x:Key="BlockNotificationCardBorderBrush"
                     Color="{DynamicResource BlockBaseViewBorderColor}"
                     Opacity="{DynamicResource BlockFlyoutBorderOpacity}" />

    <SolidColorBrush x:Key="BlockNotificationCardForegroundBrush"
                     Color="{DynamicResource BlockWindowForegroundColor}" />

    <SolidColorBrush x:Key="BlockNotificationSuccessIconBrush"
                     Color="{DynamicResource BlockGreen}" />

    <SolidColorBrush x:Key="BlockNotificationInfoIconBrush"
                     Color="{DynamicResource BlockWindowForegroundColor}" />

    <SolidColorBrush x:Key="BlockNotificationWarningIconBrush"
                     Color="{DynamicResource BlockYellow}" />

    <SolidColorBrush x:Key="BlockNotificationErrorIconBrush"
                     Color="{DynamicResource BlockRed}" />

    <Thickness x:Key="BlockNotificationCardPadding">12,12,12,12</Thickness>

    <Thickness x:Key="BlockNotificationCardIconMargin">12,12,0,12</Thickness>

    <!-- ****************************************************** -->
    <!-- ********************** Themes ************************ -->
    <!-- ****************************************************** -->


    <ControlTheme x:Key="{x:Type NotificationCard}" TargetType="NotificationCard">
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="Width" Value="350" />
        <Setter Property="Foreground" Value="{DynamicResource BlockNotificationCardForegroundBrush}" />
        <Setter Property="Background" Value="{DynamicResource BlockNotificationCardBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BlockNotificationCardBorderBrush}" />
        <Setter Property="RenderTransformOrigin" Value="50%,75%" />
        <Setter Property="BorderThickness" Value="{DynamicResource BlockFlyoutBorderThickness}" />
        <Setter Property="CornerRadius" Value="{DynamicResource BlockFlyoutCornerRadius}" />
        <Setter Property="Padding" Value="{DynamicResource BlockNotificationCardPadding}" />
        <Setter Property="blk:Block.HideDecoration" Value="False" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <ControlTemplate>
                <LayoutTransformControl Name="PART_LayoutTransformControl" UseRenderTransform="True">
                    <Decorator ClipToBounds="False"
                               Margin="{DynamicResource BlockPopupShadowMargin}"
                               Effect="{DynamicResource BlockPopupDropShadow}">

                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                ClipToBounds="True" MinHeight="64">
                            <DockPanel>
                                <PathIcon Name="StateIcon"
                                          Width="24" Height="24"
                                          blk:Block.Stretch="None"
                                          DockPanel.Dock="Left"
                                          Margin="{DynamicResource BlockNotificationCardIconMargin}"
                                          IsVisible="False" />
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Content="{TemplateBinding Content}"
                                                  Margin="{TemplateBinding Padding }"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </DockPanel>
                        </Border>
                    </Decorator>
                </LayoutTransformControl>
            </ControlTemplate>
        </Setter>

        <ControlTheme.Animations>
            <Animation Duration="0:0:0.45" Easing="QuadraticEaseIn" FillMode="Forward">
                <KeyFrame Cue="0%">
                    <Setter Property="Opacity" Value="0" />
                    <Setter Property="TranslateTransform.Y" Value="20" />
                    <Setter Property="ScaleTransform.ScaleX" Value="0.85" />
                    <Setter Property="ScaleTransform.ScaleY" Value="0.85" />
                </KeyFrame>
                <KeyFrame Cue="30%">
                    <Setter Property="TranslateTransform.Y" Value="-20" />
                </KeyFrame>
                <KeyFrame Cue="100%">
                    <Setter Property="Opacity" Value="1" />
                    <Setter Property="TranslateTransform.Y" Value="0" />
                    <Setter Property="ScaleTransform.ScaleX" Value="1" />
                    <Setter Property="ScaleTransform.ScaleY" Value="1" />
                </KeyFrame>
            </Animation>
        </ControlTheme.Animations>

        <Style Selector="^[IsClosing=true] /template/ LayoutTransformControl#PART_LayoutTransformControl">
            <Setter Property="RenderTransformOrigin" Value="50%,0%" />
            <Style.Animations>
                <Animation Duration="0:0:0.75" Easing="QuadraticEaseOut" FillMode="Forward">
                    <KeyFrame Cue="0%">
                        <Setter Property="TranslateTransform.X" Value="0" />
                        <Setter Property="ScaleTransform.ScaleY" Value="1" />
                    </KeyFrame>
                    <KeyFrame Cue="70%">
                        <Setter Property="TranslateTransform.X" Value="800" />
                        <Setter Property="ScaleTransform.ScaleY" Value="1" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleY" Value="0" />
                        <Setter Property="TranslateTransform.X" Value="800" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="^[IsClosing=true]">
            <Style.Animations>
                <Animation Duration="0:0:1.25" Easing="QuadraticEaseOut" FillMode="Forward">
                    <KeyFrame Cue="100%">
                        <Setter Property="IsClosed" Value="True" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
        
        <Style Selector="^.hide-icon">
            <Setter Property="blk:Block.HideDecoration" Value="True" />
        </Style>

        <Style Selector="^:information /template/ PathIcon#StateIcon">
            <Setter Property="Data" Value="{DynamicResource BlockInfoIcon24}" />
            <Setter Property="Foreground" Value="{DynamicResource BlockNotificationInfoIconBrush}" />
            <Setter Property="IsVisible"
                    Value="{TemplateBinding blk:Block.HideDecoration, Converter={x:Static BoolConverters.Not}}" />
        </Style>
        <Style Selector="^:success /template/ PathIcon#StateIcon">
            <Setter Property="Data" Value="{DynamicResource BlockSuccessIcon24}" />
            <Setter Property="Foreground" Value="{DynamicResource BlockNotificationSuccessIconBrush}" />
            <Setter Property="IsVisible"
                    Value="{TemplateBinding blk:Block.HideDecoration, Converter={x:Static BoolConverters.Not}}" />
        </Style>
        <Style Selector="^:warning /template/ PathIcon#StateIcon">
            <Setter Property="Data" Value="{DynamicResource BlockWarningIcon24}" />
            <Setter Property="Foreground" Value="{DynamicResource BlockNotificationWarningIconBrush}" />
            <Setter Property="IsVisible"
                    Value="{TemplateBinding blk:Block.HideDecoration, Converter={x:Static BoolConverters.Not}}" />
        </Style>
        <Style Selector="^:error /template/ PathIcon#StateIcon">
            <Setter Property="Data" Value="{DynamicResource BlockErrorIcon24}" />
            <Setter Property="Foreground" Value="{DynamicResource BlockNotificationErrorIconBrush}" />
            <Setter Property="IsVisible"
                    Value="{TemplateBinding blk:Block.HideDecoration, Converter={x:Static BoolConverters.Not}}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>