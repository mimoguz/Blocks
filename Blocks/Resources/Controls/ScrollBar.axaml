<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Orientation="Horizontal" Spacing="20">
                <StackPanel Spacing="20">
                    <ScrollBar Orientation="Horizontal" AllowAutoHide="False" VerticalAlignment="Center" Width="100" />
                    <ScrollBar Orientation="Horizontal" AllowAutoHide="False" VerticalAlignment="Center" Width="100"
                               IsEnabled="False" />
                    <ScrollBar Orientation="Horizontal" AllowAutoHide="True" VerticalAlignment="Center" Width="100" />
                    <ScrollBar Orientation="Horizontal" AllowAutoHide="True" VerticalAlignment="Center" Width="100"
                               IsEnabled="False" />
                </StackPanel>
                <ScrollBar Orientation="Vertical" AllowAutoHide="False" HorizontalAlignment="Center" Height="100" />
                <ScrollBar Orientation="Vertical" AllowAutoHide="False" HorizontalAlignment="Center" Height="100"
                           IsEnabled="False" />
                <ScrollBar Orientation="Vertical" AllowAutoHide="True" HorizontalAlignment="Center" Height="100" />
                <ScrollBar Orientation="Vertical" AllowAutoHide="True" HorizontalAlignment="Center" Height="100"
                           IsEnabled="False" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="BlockScrollBarThumb" TargetType="Thumb">
        <Setter Property="Background" Value="{DynamicResource BlockBaseInputButtonBackgroundBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Opacity="{DynamicResource BlockScrollBarThumbOpacity}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Transitions">
            <Transitions>
                <CornerRadiusTransition Property="CornerRadius"
                                        Duration="{DynamicResource BlockButtonStateTransitionDuration}"
                                        Easing="CubicEaseOut" />
                <DoubleTransition Property="Width"
                                  Duration="{DynamicResource BlockButtonStateTransitionDuration}"
                                  Easing="CubicEaseOut" />
                <DoubleTransition Property="Height"
                                  Duration="{DynamicResource BlockButtonStateTransitionDuration}"
                                  Easing="CubicEaseOut" />
                <DoubleTransition Property="Opacity"
                                  Duration="{DynamicResource BlockButtonStateTransitionDuration}"
                                  Easing="CubicEaseOut" />
            </Transitions>
        </Setter>

        <Style Selector="^:pointerover /template/ Border">
            <Setter Property="Opacity" Value="{DynamicResource BlockScrollBarThumbHighlightOpacity}" />
        </Style>
        <Style Selector="^:pressed  /template/ Border">
            <Setter Property="Opacity" Value="{DynamicResource BlockScrollBarThumbShadeOpacity}" />
        </Style>
        <Style Selector="^:disabled  /template/ Border">
            <Setter Property="Opacity" Value="{DynamicResource BlockScrollBarThumbOpacity}" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="BlockScrollBarPageButton" TargetType="RepeatButton">
        <Setter Property="Background" Value="{DynamicResource BlockBaseViewBackgroundBrush}" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        Opacity="0" />
            </ControlTemplate>
        </Setter>

        <Style Selector="^:pointerover /template/ Border">
            <Setter Property="Opacity" Value="{DynamicResource BlockScrollBarPageButtonHighlightOpacity}" />
        </Style>
        <Style Selector="^:pressed  /template/ Border">
            <Setter Property="Opacity" Value="{DynamicResource BlockScrollBarPageButtonShadeOpacity}" />
        </Style>
        <Style Selector="^:disabled  /template/ Border">
            <Setter Property="Opacity" Value="0" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="BlockScrollBarLineButton" TargetType="RepeatButton">
        <Setter Property="Opacity" Value="0" />
        <Setter Property="Background" Value="{DynamicResource BlockBaseInputButtonBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="{DynamicResource BlockScrollBarThumbCornerRadius}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <Border Background="{TemplateBinding Background}"
                            Opacity="{DynamicResource BlockButtonBackgroundOpacity}">
                        <Border.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity"
                                                  Duration="{DynamicResource BlockButtonStateTransitionDuration}"
                                                  Easing="CubicEaseOut" />
                            </Transitions>
                        </Border.Transitions>
                    </Border>
                    <ContentPresenter x:Name="PART_ContentPresenter"
                                      Content="{TemplateBinding Content}" />
                </Panel>
            </ControlTemplate>
        </Setter>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity"
                                  Duration="{DynamicResource BlockButtonStateTransitionDuration}"
                                  Easing="CubicEaseOut" />
            </Transitions>
        </Setter>

        <Style Selector="^:pointerover /template/ Border">
            <Setter Property="Opacity" Value="{DynamicResource BlockButtonBackgroundOpacity}" />
        </Style>

        <Style Selector="^:pressed /template/ Border">
            <Setter Property="Opacity" Value="{DynamicResource BlockButtonShadeOpacity}" />
        </Style>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type ScrollBar}" TargetType="ScrollBar">
        <Setter Property="MinWidth" Value="{DynamicResource BlockScrollBarThumbSize}" />
        <Setter Property="MinHeight" Value="{DynamicResource BlockScrollBarThumbSize}" />
        <Setter Property="Background" Value="{DynamicResource BlockBaseViewBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource BlockButtonForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BlockButtonForegroundBrush}" />

        <Style Selector="^:vertical">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid x:Name="Root">
                        <Border x:Name="VerticalRoot">
                            <Grid RowDefinitions="Auto,*,Auto">
                                <Rectangle x:Name="TrackRect"
                                           Grid.Row="0"
                                           Grid.RowSpan="3"
                                           Fill="{TemplateBinding Background}"
                                           Opacity="0">
                                    <Rectangle.Transitions>
                                        <Transitions>
                                            <DoubleTransition Property="Opacity"
                                                              Duration="{DynamicResource BlockButtonStateTransitionDuration}"
                                                              Easing="CubicEaseOut" />
                                        </Transitions>
                                    </Rectangle.Transitions>
                                </Rectangle>

                                <RepeatButton Name="PART_LineUpButton"
                                              HorizontalAlignment="Center"
                                              Theme="{StaticResource BlockScrollBarLineButton}"
                                              Grid.Row="0"
                                              Focusable="False"
                                              MinWidth="{DynamicResource BlockScrollBarThumbSize}"
                                              Height="{DynamicResource BlockScrollBarThumbSize}">
                                    <PathIcon Data="{DynamicResource BlockArrowUp8X4}"
                                              Width="8"
                                              Height="4"
                                              Foreground="{TemplateBinding Foreground}" />
                                </RepeatButton>

                                <Track Grid.Row="1"
                                       Minimum="{TemplateBinding Minimum}"
                                       Maximum="{TemplateBinding Maximum}"
                                       Value="{TemplateBinding Value, Mode=TwoWay}"
                                       DeferThumbDrag="{TemplateBinding ScrollViewer.IsDeferredScrollingEnabled}"
                                       ViewportSize="{TemplateBinding ViewportSize}"
                                       Orientation="{TemplateBinding Orientation}"
                                       IsDirectionReversed="True">
                                    <Track.DecreaseButton>
                                        <RepeatButton Name="PART_PageUpButton"
                                                      Theme="{StaticResource BlockScrollBarPageButton}"
                                                      Focusable="False" />
                                    </Track.DecreaseButton>
                                    <Track.IncreaseButton>
                                        <RepeatButton Name="PART_PageDownButton"
                                                      Theme="{StaticResource BlockScrollBarPageButton}"
                                                      Focusable="False" />
                                    </Track.IncreaseButton>
                                    <Thumb Theme="{StaticResource BlockScrollBarThumb}"
                                           Width="{DynamicResource BlockScrollBarCompactThumbSize}"
                                           MinHeight="{DynamicResource BlockScrollBarThumbSize}"
                                           CornerRadius="{DynamicResource BlockScrollBarCompactThumbCornerRadius}" />
                                </Track>

                                <RepeatButton Name="PART_LineDownButton"
                                              HorizontalAlignment="Center"
                                              Theme="{StaticResource BlockScrollBarLineButton}"
                                              Grid.Row="2"
                                              Focusable="False"
                                              MinWidth="{DynamicResource BlockScrollBarThumbSize}"
                                              Height="{DynamicResource BlockScrollBarThumbSize}">
                                    <PathIcon Data="{DynamicResource BlockArrowDown8X4}"
                                              Width="8"
                                              Height="4"
                                              Foreground="{TemplateBinding Foreground}" />
                                </RepeatButton>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="^:horizontal">
            <Setter Property="Template">
                <ControlTemplate>
                    <Grid x:Name="Root">
                        <Border x:Name="HorizontalRoot">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <Rectangle x:Name="TrackRect"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="3"
                                           Fill="{TemplateBinding Background}"
                                           Opacity="0">
                                    <Rectangle.Transitions>
                                        <Transitions>
                                            <DoubleTransition Property="Opacity"
                                                              Duration="{DynamicResource BlockButtonStateTransitionDuration}"
                                                              Easing="CubicEaseOut" />
                                        </Transitions>
                                    </Rectangle.Transitions>
                                </Rectangle>

                                <RepeatButton Name="PART_LineUpButton"
                                              Theme="{StaticResource BlockScrollBarLineButton}"
                                              VerticalAlignment="Center"
                                              Grid.Column="0"
                                              Focusable="False"
                                              MinHeight="{DynamicResource BlockScrollBarThumbSize}"
                                              Width="{DynamicResource BlockScrollBarThumbSize}">
                                    <PathIcon Data="{DynamicResource BlockArrowLeft4X8}"
                                              Width="4"
                                              Height="8"
                                              Foreground="{TemplateBinding Foreground}" />
                                </RepeatButton>

                                <Track Grid.Column="1"
                                       Minimum="{TemplateBinding Minimum}"
                                       Maximum="{TemplateBinding Maximum}"
                                       Value="{TemplateBinding Value, Mode=TwoWay}"
                                       DeferThumbDrag="{TemplateBinding ScrollViewer.IsDeferredScrollingEnabled}"
                                       ViewportSize="{TemplateBinding ViewportSize}"
                                       Orientation="{TemplateBinding Orientation}">
                                    <Track.DecreaseButton>
                                        <RepeatButton Name="PART_PageUpButton"
                                                      Theme="{StaticResource BlockScrollBarPageButton}"
                                                      Focusable="False" />
                                    </Track.DecreaseButton>
                                    <Track.IncreaseButton>
                                        <RepeatButton Name="PART_PageDownButton"
                                                      Theme="{StaticResource BlockScrollBarPageButton}"
                                                      Focusable="False" />
                                    </Track.IncreaseButton>
                                    <Thumb Theme="{StaticResource BlockScrollBarThumb}"
                                           Height="{DynamicResource BlockScrollBarCompactThumbSize}"
                                           MinWidth="{DynamicResource BlockScrollBarThumbSize}"
                                           CornerRadius="{DynamicResource BlockScrollBarCompactThumbCornerRadius}" />
                                </Track>

                                <RepeatButton Name="PART_LineDownButton"
                                              Theme="{StaticResource BlockScrollBarLineButton}"
                                              VerticalAlignment="Center"
                                              Grid.Column="2"
                                              Focusable="False"
                                              MinHeight="{DynamicResource BlockScrollBarThumbSize}"
                                              Width="{DynamicResource BlockScrollBarThumbSize}">
                                    <PathIcon Data="{DynamicResource BlockArrowRight4X8}"
                                              Width="4"
                                              Height="8"
                                              Foreground="{TemplateBinding Foreground}" />
                                </RepeatButton>
                            </Grid>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="^[IsExpanded=true]">
            <Style Selector="^ /template/ Rectangle#TrackRect">
                <Setter Property="Opacity" Value="{DynamicResource BlockViewBackgroundOpacity}" />
            </Style>
            <Style Selector="^ /template/ Thumb">
                <Setter Property="CornerRadius" Value="{DynamicResource BlockScrollBarThumbCornerRadius}" />
            </Style>
            <Style Selector="^ /template/ RepeatButton">
                <Setter Property="Opacity" Value="1" />
            </Style>
            <Style Selector="^:horizontal /template/ Thumb">
                <Setter Property="Height" Value="{DynamicResource BlockScrollBarThumbSize}" />
            </Style>
            <Style Selector="^:vertical /template/ Thumb">
                <Setter Property="Width" Value="{DynamicResource BlockScrollBarThumbSize}" />
            </Style>
        </Style>

        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="{DynamicResource BlockDisabledOpacity}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>