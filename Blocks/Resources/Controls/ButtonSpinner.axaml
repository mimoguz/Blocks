<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource BlockWindowBackgroundBrush}">
            <StackPanel Spacing="10">
                <ButtonSpinner Width="200">Content</ButtonSpinner>
                <ButtonSpinner Height="120" Classes="vertical" HorizontalAlignment="Center">10</ButtonSpinner>
            </StackPanel>
        </Border>
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type ButtonSpinner}"
                  TargetType="ButtonSpinner">
        <Setter Property="Background" Value="{DynamicResource BlockBaseInputButtonBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BlockBaseViewBorderBrush}" />
        <Setter Property="BorderThickness" Value="{DynamicResource BlockControlBorderThickness}" />
        <Setter Property="Foreground" Value="{DynamicResource BlockWindowForegroundBrush}" />
        <Setter Property="CornerRadius" Value="{DynamicResource BlockInputCornerRadius}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="MinHeight" Value="{DynamicResource BlockMinButtonSize}" />
        <Setter Property="Padding" Value="{DynamicResource BlockInputPadding}" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="FocusAdorner" Value="{x:Null}" />
        <Setter Property="Template">
            <ControlTemplate>
                <DataValidationErrors>
                    <Panel>
                        <Border Name="ViewBorder"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Opacity="{DynamicResource BlockViewBorderOpacity}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <Border.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="Opacity"
                                                      Duration="{DynamicResource BlockButtonStateTransitionDuration}" />
                                    <BrushTransition Property="BorderBrush"
                                                      Duration="{DynamicResource BlockButtonStateTransitionDuration}" />
                                </Transitions>
                            </Border.Transitions>
                        </Border>
                        <Border Name="ViewBackground"
                                Background="{DynamicResource BlockBaseViewBackgroundBrush}"
                                Opacity="{DynamicResource BlockViewBackgroundOpacity}"
                                Margin="{TemplateBinding BorderThickness}">
                            <Border.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="Opacity"
                                                      Duration="{DynamicResource BlockButtonStateTransitionDuration}" />
                                </Transitions>
                            </Border.Transitions>
                            <Border.CornerRadius>
                                <MultiBinding Converter="{StaticResource InnerRadius}">
                                    <TemplateBinding Property="CornerRadius" />
                                    <TemplateBinding Property="BorderThickness" />
                                </MultiBinding>
                            </Border.CornerRadius>
                        </Border>
                        <Border Name="FocusVisual"
                                Opacity="0"
                                Margin="{TemplateBinding BorderThickness}"
                                BorderBrush="{DynamicResource BlockBaseFocusBrush}"
                                BorderThickness="{DynamicResource BlockFocusBorderThickness}">
                            <Border.Transitions>
                                <Transitions>
                                    <DoubleTransition Property="Opacity"
                                                      Duration="{DynamicResource BlockButtonStateTransitionDuration}" />
                                </Transitions>
                            </Border.Transitions>
                            <Border.CornerRadius>
                                <MultiBinding Converter="{StaticResource InnerRadius}">
                                    <TemplateBinding Property="CornerRadius" />
                                    <TemplateBinding Property="BorderThickness" />
                                </MultiBinding>
                            </Border.CornerRadius>
                        </Border>
                        <Border Margin="{TemplateBinding BorderThickness}">
                            <DockPanel Margin="{TemplateBinding BorderThickness}">
                                <RepeatButton Name="PART_DecreaseButton"
                                              Classes="flat"
                                              IsTabStop="{TemplateBinding IsTabStop}"
                                              DockPanel.Dock="Left"
                                              Background="{TemplateBinding Background}"
                                              VerticalAlignment="Stretch"
                                              MinHeight="0"
                                              Padding="0"
                                              MinWidth="{Binding $self.Bounds.Height}"
                                              HorizontalContentAlignment="Center">
                                    <RepeatButton.CornerRadius>
                                        <MultiBinding Converter="{StaticResource InnerRadius}">
                                            <TemplateBinding Property="CornerRadius" />
                                            <TemplateBinding Property="BorderThickness" />
                                            <TemplateBinding Property="BorderThickness" />
                                        </MultiBinding>
                                    </RepeatButton.CornerRadius>
                                    <Path Name="DecreaseIcon"
                                          Width="{DynamicResource BlockIconSize}"
                                          Height="{DynamicResource BlockIconSize}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Data="{StaticResource BlockLeftChevron}"
                                          Stroke="{DynamicResource BlockButtonForegroundBrush}"
                                          StrokeThickness="{DynamicResource BlockIconStrokeThickness}"
                                          Stretch="None" />
                                </RepeatButton>
                                <RepeatButton Name="PART_IncreaseButton"
                                              Classes="flat"
                                              IsTabStop="{TemplateBinding IsTabStop}"
                                              DockPanel.Dock="Right"
                                              Background="{TemplateBinding Background}"
                                              VerticalAlignment="Stretch"
                                              MinHeight="0"
                                              Padding="0"
                                              MinWidth="{Binding $self.Bounds.Height}"
                                              HorizontalContentAlignment="Center">
                                    <RepeatButton.CornerRadius>
                                        <MultiBinding Converter="{StaticResource InnerRadius}">
                                            <TemplateBinding Property="CornerRadius" />
                                            <TemplateBinding Property="BorderThickness" />
                                            <TemplateBinding Property="BorderThickness" />
                                        </MultiBinding>
                                    </RepeatButton.CornerRadius>
                                    <Path Name="IncreaseIcon"
                                          Width="{DynamicResource BlockIconSize}"
                                          Height="{DynamicResource BlockIconSize}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Data="{StaticResource BlockRightChevron}"
                                          Stroke="{DynamicResource BlockButtonForegroundBrush}"
                                          StrokeThickness="{DynamicResource BlockIconStrokeThickness}"
                                          Stretch="None" />
                                </RepeatButton>
                                <ContentPresenter Name="PART_ContentPresenter"
                                                  Background="Transparent"
                                                  TabIndex="1"
                                                  Padding="{TemplateBinding Padding}"
                                                  HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}" />
                            </DockPanel>
                        </Border>
                    </Panel>
                </DataValidationErrors>
            </ControlTemplate>
        </Setter>
        
        <Style Selector="^:pointerover /template/ Border#ViewBorder">
            <Setter Property="Opacity" Value="{DynamicResource BlockViewHighlightOpacity}" />
        </Style>
        
        <Style Selector="^:focus-visible">
            <Style Selector="^ /template/ Border#FocusVisual">
                <Setter Property="Opacity" Value="{DynamicResource BlockViewFocusOpacity}" />
            </Style>
        </Style>
        
        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="{DynamicResource BlockDisabledOpacity}" />
        </Style>

        <Style Selector="^.vertical">
            <Setter Property="MinHeight" Value="{DynamicResource BlockMinButtonSize}" />
            <Setter Property="MinWidth" Value="{DynamicResource BlockMinButtonSize}" />
            <Setter Property="Padding" Value="{DynamicResource BlockVerticalInputPadding}" />
            <Style Selector="^ /template/ RepeatButton#PART_IncreaseButton">
                <Setter Property="DockPanel.Dock" Value="Top" />
                <Setter Property="MinWidth" Value="0" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Top" />
                <Setter Property="MinHeight" Value="{Binding $self.Bounds.Width}" />
            </Style>
            <Style Selector="^ /template/ RepeatButton#PART_DecreaseButton">
                <Setter Property="DockPanel.Dock" Value="Bottom" />
                <Setter Property="MinWidth" Value="0" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
                <Setter Property="MinHeight" Value="{Binding $self.Bounds.Width}" />
            </Style>
            <Style Selector="^ /template/ Path#IncreaseIcon">
                <Setter Property="Data" Value="{StaticResource BlockUpChevron}" />
            </Style>
            <Style Selector="^ /template/ Path#DecreaseIcon">
                <Setter Property="Data" Value="{StaticResource BlockDownChevron}" />
            </Style>
        </Style>
    </ControlTheme>
</ResourceDictionary>