<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:Blocks.Converters">

    <Design.PreviewWith>
        <StackPanel>
            <Rectangle Fill="Aqua" Height="50" />
            <Separator />
            <Separator Classes="dark" />
            <StackPanel Orientation="Horizontal">
                <Rectangle Fill="Chartreuse" Width="100" Height="50" />
                <Separator Classes="vertical" />
                <Separator Classes="dark vertical" />
                <Rectangle Fill="HotPink" Width="100" Height="50" />
            </StackPanel>
        </StackPanel>
    </Design.PreviewWith>

    <!-- ****************************************************** -->
    <!-- ********************* Resources ********************** -->
    <!-- ****************************************************** -->

    <SolidColorBrush x:Key="BlockSeparatorLineBrush"
                     Color="{DynamicResource BlockBaseViewBorderColor}"
                     Opacity="{DynamicResource BlockSeparatorOpacity}" />
    
    <SolidColorBrush x:Key="BlockDarkSeparatorLineBrush"
                     Color="{DynamicResource BlockInvariantDarkColor}"
                     Opacity="{DynamicResource BlockDarkSeparatorOpacity}" />

    <x:Double x:Key="BlockSeparatorLineThickness">1</x:Double>
    <x:Double x:Key="BlockSeparatorHeight">5</x:Double>
    <Thickness x:Key="BlockSeparatorPadding">0</Thickness>

    <!-- ****************************************************** -->
    <!-- ********************** Themes ************************ -->
    <!-- ****************************************************** -->

    <ControlTheme x:Key="{x:Type Separator}" TargetType="Separator">
        <Setter Property="BorderBrush" Value="{DynamicResource BlockSeparatorLineBrush}" />
        <Setter Property="Padding" Value="{DynamicResource BlockSeparatorPadding}" />
        <Setter Property="Focusable" Value="False" />

        <Style Selector="^:not(.vertical)">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Height" Value="{DynamicResource BlockSeparatorHeight}" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Name="Outside"
                            Background="{TemplateBinding Background}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                        <Rectangle Name="Line"
                                   Margin="{TemplateBinding Padding, Converter={x:Static conv:BlockConverters.SelectHorizontalThickness}}"
                                   Height="{DynamicResource BlockSeparatorLineThickness}"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   Fill="{TemplateBinding BorderBrush}" />
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>

        <Style Selector="^.vertical">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Width" Value="{DynamicResource BlockSeparatorHeight}" />
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Name="Outside"
                            Background="{TemplateBinding Background}"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch">
                        <Rectangle Name="Line"
                                   Margin="{TemplateBinding Padding, Converter={x:Static conv:BlockConverters.SelectVerticalThickness}}"
                                   Width="{DynamicResource BlockSeparatorLineThickness}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Stretch"
                                   Fill="{TemplateBinding BorderBrush}" />
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        
        <Style Selector="^.dark">
            <Setter Property="BorderBrush" Value="{DynamicResource BlockDarkSeparatorLineBrush}" />
        </Style>
    </ControlTheme>
</ResourceDictionary>